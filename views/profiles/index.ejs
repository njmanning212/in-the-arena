<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/index.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <div id="search">
    <form action="/profiles/search" method="GET">
      <label for="search">Search by Name:</label>
      <input type="text" name="searchName" id="search" autocomplete="off">
      <button type="submit">Search</button>
    </form>    
  </div>
  <section>
    <% profiles.forEach(profile => { %>
      <div>
        <img src="<%= profile.avatar %>" alt=" <%= profile.name %>">
        <p><%= profile.name %></p>
        <a href="/profiles/<%= profile._id %>">
          <button>Profile Details</button>
        </a>
      </div>
    <% }) %>
  </section>
</main>

<%- include('../partials/footer') %>
